<module>
    <!-- module's name should match its executable file's name. -->
    <name>featExt</name>
    <description>Extract functional features - shape descriptors from a blob</description>
    <version>0.1</version>

    <!-- <arguments> can have multiple <param> tags-->
    <arguments>
    <!-- <param default = "" desc="indices of desired features"> featInd </param> -->
    <!--    
    <param desc="Name of the module" default="blobExtractor"> name</param>
    <param desc="Sub-path from \c $ICUB_ROOT/app to the configuration file" default="blobExtractor/conf"> context </param>
	<param desc="Configuration file" default="config.ini"> from </param>
    -->
    </arguments>

    <!-- <authors> can have multiple <author> tags. -->
    <authors>
	  <author email=""> Tanis </author>
    </authors>

     <!-- <data> can have multiple <input> or <output> tags. -->
     <data>
        <input port_type="service">
            <type>rpc</type>
            <port carrier="tcp">/featExt/rpc:i</port>
            <description> Takes RPC commands from Human or stateMachine</description>
        </input>
        <input>
            <type>ImageOfPixelRgb</type>
            <port carrier="udp">/featExt/img:i</port>
            <required>yes</required>
            <priority>no</priority>
            <description> Receives the camera image.</description>
        </input>
        
        <!--
        <input>
            <type>ImageOfPixelRgb</type>
            <port carrier="udp">/featExt/binImg:i</port>
            <required>no</required>
            <priority>no</priority>
            <description> Receives blob image</description>
        </input>
        -->
        
        <!-- output data if available -->
        <output>
            <type>Vector(Vector(double))</type>
            <port carrier="udp">/featExt/feats:o</port>
            <description>Sends a vector with the obtained features</description>
        </output>
        <output>
            <type>Image</type>
            <port carrier="udp">/featExt/imgProp:o</port>
            <description>Propagates the original image, with the blobs detected drawn on top</description>
        </output>        
        <output>
            <type>Image</type>
            <port carrier="udp">/featExt/imgFeat:o</port>
            <description>Sends an image with detected blobs and some of their features shown</description>
        </output>

    </data>

    <dependencies>
        <computer>
        </computer>
    </dependencies>

    <!-- specific libraries or header files which are used for development -->
    <development>
        <header></header>
        <library>YARP</library>
        <library>OpenCV</library>
    </development>

</module>

