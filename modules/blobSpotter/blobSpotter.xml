<module>
    <!-- module's name should match its executable file's name. -->
    <name>blobSpotter</name>
    <description> Detects blobs from an image</description>
    <version>1.0</version>

    <!-- <arguments> can have multiple <param> tags-->
    <arguments>
    <!--
    <param desc="Name of the module" default="blobExtractor"> name</param>
    <param desc="Sub-path from \c $ICUB_ROOT/app to the configuration file" default="blobExtractor/conf"> context </param>
	<param desc="Configuration file" default="config.ini"> from </param>
    -->
    </arguments>

    <!-- <authors> can have multiple <author> tags. -->
    <authors>
	  <author email=""> Vadim Tikhanoff </author>
    </authors>

     <!-- <data> can have multiple <input> or <output> tags. -->
     <data>
        
        <input>
            <type>ImageOfPixelRgb</type>
            <port carrier="udp">/blobSpotter/image:i</port>
            <required>yes</required>
            <priority>no</priority>
            <description>Receives the camera image.</description>
        </input>

        <input>
            <type>Bottle</type>
            <port carrier="tcp">/blobSpotter/fixRoi:i</port>
            <description> Receives a particular ROI</description>
        </input>

        <!-- output datas if available -->
        <output>
            <type>ImageOfPixelRgb</type>
            <port carrier="udp">/blobSpotter/propagated:o</port>
            <description>Propagates the original image for synchronization</description>
        </output>
        <output>
            <type>ImageOfPixelRgb</type>
            <port carrier="udp">/blobSpotter/image:o</port>
            <description>Outputs the blob image</description>
        </output>

        <output>
            <type>Bottle</type>
            <port carrier="tcp">/blobSpotter/blobs:o</port>
            <description>coordinates of discovered blobs</description>
        </output>

    </data>

    <dependencies>
        <computer>
        </computer>
    </dependencies>

    <!-- specific libraries or header files which are used for development -->
    <development>
        <header></header>
        <library>YARP</library>
        <library>OpenCV</library>
    </development>

</module>

