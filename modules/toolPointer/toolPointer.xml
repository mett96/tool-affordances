<module>
    <!-- module's name should match its executable file's name. -->
    <name>toolPointer</name>
    <description> Returns tool blob coordinates from GBS, after user has clicked on it.</description>
    <version>2.0</version>

    <!-- <arguments> can have multiple <param> tags-->
    <arguments>
        <param desc="Name of the module" default="toolPointer"> name</param>
        <param desc="Sub-path from \c $ICUB_ROOT/app to the configuration file" default="AffordancesProject"> context </param>
        <param desc="Configuration file" default="toolPointer.ini"> from </param>        
    </arguments>

    <!-- <authors> can have multiple <author> tags. -->
    <authors>
	  <author email=""> Tanis Mar</author>
    </authors>

     <!-- <data> can have multiple <input> or <output> tags. -->
     <data>
        <!-- input data if available -->
        <input port_type="service">
            <type>rpc</type>
            <port carrier="tcp">/toolPointer/rpc:i</port>
            <description>takes RPC commands from Human or stateMachine</description>
        </input>

        <input>
            <type>Bottle</type>
            <port carrier="udp">/toolPointer/coords:i</port>
            <description>Receives image coordinates to retreive the blob from</description>
        </input>         
        <input>
            <type>ImageOfPixelRgb</type>
            <port carrier="udp">/toolPointer/segIm:i</port>
            <description>Receives the segmentation image provided by GBS</description>
        </input>      

        <!-- output data if available -->
        <output>
            <type>ImageOfPixelRgb</type>
            <port carrier="udp">/toolPointer/img:o</port>
            <description> Send out the closest blob and coordinates superposed on the disparity image</description>
        </output>
        <output>
            <type>Bottle</type>
            <port carrier="tcp">/toolPointer/target:o</port>
            <description> Coordinates of closest object</description>
        </output>
        <output>
            <type>ImageOfPixelMono</type>
            <port carrier="udp">/toolPointer/imgBin:o</port>
            <description> Send out the binary image of selected blob</description>
        </output>
        <output port_type="service">
            <type>rpc</type>
            <port>/toolPointer/gbs:rpc</port>
            <description> Send commands to the Graph Based Segmentation module</description>
        </output>
        
    </data>

    <dependencies>
        <computer>
        </computer>
    </dependencies>

    <!-- specific libraries or header files which are used for development -->
    <development>
        <header></header>
        <library>YARP</library>
         <library>OpenCV</library>
    </development>

</module>

