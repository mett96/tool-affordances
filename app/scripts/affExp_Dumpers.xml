<application>
    <name>affExp_Dumpers</name>
    <version>udp</version>
    <authors>
        <author email=""></author>
    </authors>
    <module>
        <name>dataDumper</name>
        <parameters>--type image --dir camCalibLeft --downsample 5 --rxTime</parameters>
        <node>localhost</node>
        <prefix>/camCalibLeft</prefix>
        <workdir>/tmp/affData</workdir>
    </module>
    <module>
        <name>dataDumper</name>
        <parameters>--dir toolFeats --rxTime</parameters>
        <node>localhost</node>
        <prefix>/toolFeats</prefix>
        <workdir>/tmp/affData</workdir>
    </module>
    <module>
        <name>dataDumper</name>
        <parameters>--dir actionEffect --rxTime</parameters>
        <node>localhost</node>
        <prefix>/actionEffect</prefix>
        <workdir>/tmp/affData</workdir>
    </module>
    <module>
        <name>dataDumper</name>
        <parameters>--type image --dir imgBin --rxTime</parameters>
        <node>localhost</node>
        <prefix>/imgBin</prefix>
        <workdir>/tmp/affData</workdir>
    </module>
    <module>
        <name>dataDumper</name>
        <parameters>--type image --dir imgLoc --rxTime</parameters>
        <node>localhost</node>
        <prefix>/imgLoc</prefix>
        <workdir>/tmp/affData</workdir>
    </module>
    <module>
        <name>dataDumper</name>
        <parameters>--dir tooltip --downsample 10 --rxTime</parameters>
        <node>localhost</node>
        <prefix>/tooltip</prefix>
        <workdir>/tmp/tooltip</workdir>
    </module>    
    <module>
        <name>dataDumper</name>
        <parameters>--dir dumpRightEEF --rxTime</parameters>
        <node>localhost</node>
        <prefix>/dumpRightEEF</prefix>
        <workdir>/tmp/affData</workdir>
    </module>
    <module>
        <name>dataDumper</name>
        <parameters>--dir dumpLeftEEF --rxTime</parameters>
        <node>localhost</node>
        <prefix>/dumpLeftEEF</prefix>
        <workdir>/tmp/affData</workdir>
    </module>


    <connection>
        <from external="true">/icub/camcalib/left/out</from>
        <to external="true">/camCalibLeft/dump</to>
        <protocol>mcast</protocol>
    </connection>
    <connection>
        <from external="true">/featExt/feats:o</from>
        <to external="true">/toolFeats/dump</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from external="true">/affManager/data:o</from>
        <to external="true">/actionEffect/dump</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from external="true">/toolBlobber/imgBin:o</from>
        <to external="true">/imgBin/dump</to>
        <protocol>mcast</protocol>
        <geometry></geometry>
    </connection>
    <connection>
        <from external="true">/objectFinder/imgOut:o</from>
        <to external="true">/imgOut/dump</to>
        <protocol>mcast</protocol>
    </connection>
    <connection>
        <from external="true">/karmaToolFinder/tip:o</from>
        <to external="true">/tooltip/dump</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from external="true">/icub/cartesianController/right_arm/state:o</from>
        <to external="true">/dumpRightEEF/dump</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from external="true">/icub/cartesianController/left_arm/state:o</from>
        <to external="true">/dumpLeftEEF/dump</to>
        <protocol>udp</protocol>
    </connection>
</application>
