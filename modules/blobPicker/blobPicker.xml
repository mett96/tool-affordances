<module>
    <!-- module's name should match its executable file's name. -->
    <name>blobPicker</name>
    <description>Selects a blob among the available ones according to a criteria specified on the rpc.</description>
    <version>1.0</version>

    <!-- <arguments> can have multiple <param> tags-->
    <arguments>
    <!--
    <param desc="Name of the module" default="blobPicker"> name</param>
    <param desc="Sub-path from \c $ICUB_ROOT/app to the configuration file" default="blobExtractor/conf"> context </param>
	<param desc="Configuration file" default="config.ini"> from </param>
    -->
    </arguments>

    <!-- <authors> can have multiple <author> tags. -->
    <authors>
	  <author email=""> Tanis Mar</author>
    </authors>

     <!-- <data> can have multiple <input> or <output> tags. -->
     <data>
        <!-- input data if available -->
        <input>
            <type>Rpc</type>
            <port carrier="tcp">/blobPicker/cmd:rpc</port>
            <required>no</required>
            <priority>no</priority>
            <description> rpc port to talk with accept commands</description>
        </input>
        
        <input>
            <type>ImageOfPixelRgb</type>
            <port carrier="udp">/blobPicker/image:i</port>
            <required>yes</required>
            <priority>no</priority>
            <description> Receives the binary image of the blobs.</description>
        </input>

        <input>
            <type>Bottle</type>
            <port carrier="tcp">/blobPicker/blobs:i</port>
            <required>no</required>
            <priority>no</priority>
            <description> Receives blobs coordinates</description>
        </input>

        <!-- output data if available -->
        <output>
            <type>ImageOfPixelRgb</type>
            <port carrier="udp">/blobPicker/image:o</port>
            <description> Send out the binary image of selected blob</description>
        </output>

        <output>
            <type>Bottle</type>
            <port carrier="tcp">/blobPicker/blob:o</port>
            <description> Coordinates of selected blob</description>
        </output>

    </data>

    <dependencies>
        <computer>
        </computer>
    </dependencies>

    <!-- specific libraries or header files which are used for development -->
    <development>
        <header></header>
        <library>YARP</library>
        <library>OpenCV</library>
    </development>

</module>

